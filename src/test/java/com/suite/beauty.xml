<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Beauty_test_core">
    <test name="Verify that the new case will be created after inputting valid information on all required fields by pss.">
        <classes>
            <class name="com.scripts.beauty">
                <methods>
                    <include name="Beauty_create_case"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Verify that the case will be changed from new to assign when click submit button after save all required field by pss.">
        <classes>
            <class name="com.scripts.beauty">
                <methods>
                    <include name="Beauty_new_to_assign"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Verify that the case can change from assign to approved when click assign button after save all required field by provider.">
        <classes>
            <class name="com.scripts.beauty">
                <methods>
                    <include name="Beauty_assign_to_approve"></include>
                </methods>
            </class>
        </classes>
    </test>



    <test name="Verify that the case can change from approved to complete by pss when click approved button by pss.">
        <classes>
            <class name="com.scripts.beauty">
                <methods>
                    <include name="complete"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>